{
	"name": "ergofi",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"deploy": "vite build && rsync -rav ./build/ root@ergfi:/var/www/ergfi/",
		"preview": "vite preview",
		"compile": "bun src/lib/dexygold/compileDexyContracts.ts",
		"recompile": "onchange '**/*.es' -- npm run compile",
		"compile:all": "bun src/lib/dexygold/dexyContractListGenerator.ts && bun src/lib/dexygold/compileDexyContracts.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "vitest run --no-coverage"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.0",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^22.10.7",
		"@types/numeral": "^2.0.5",
		"@types/phoenix": "^1.6.5",
		"autoprefixer": "^10.4.20",
		"bip32": "^5.0.0-rc.0",
		"bip39": "^3.1.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"i": "^0.3.7",
		"npm": "^11.0.0",
		"onchange": "^7.1.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"tiny-secp256k1": "^2.2.3",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@fleet-sdk/compiler": "^0.8.1",
		"@fleet-sdk/core": "^0.8.1",
		"@fleet-sdk/mock-chain": "^0.8.1",
		"@fleet-sdk/serializer": "^0.8.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"bignumber.js": "^9.1.2",
		"date-fns": "^4.1.0",
		"ergo-lib-wasm-nodejs": "^0.28.0",
		"fs": "^0.0.1-security",
		"idb": "^8.0.0",
		"lodash-es": "^4.17.21",
		"lucide-svelte": "^0.461.0",
		"numeral": "^2.0.6",
		"path": "^0.12.7",
		"phoenix": "^1.7.14"
	}
}